RewriteEngine On

# Redirect everything to /public if not already there
RewriteCond %{REQUEST_URI} !^/public/
RewriteRule ^(.*)$ /public/$1 [L,QSA]

# Block access to sensitive files
<FilesMatch "^(\.env|composer\.json|composer\.lock|phpunit\.xml|artisan|\.git|\.cpanel\.yml)$">
	Require all denied
</FilesMatch>

# Disable directory browsing
Options -Indexes
